<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <ImageView
        android:id="@+id/tree_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/b_tree_up" />

    <ImageView
        android:id="@+id/avt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/home_logo_big"/>
    <Button
        android:id="@+id/profile_button"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:text="Hồ sơ cá nhân"
        android:textSize="18sp"
        android:lineHeight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/avt_home"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:fontFamily="@font/iner_bold"
        android:background="@drawable/my_button_background"
        android:layout_marginBottom="44dp"/>

    <Button
        android:id="@+id/user_list_button"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:text="Danh sách người dùng"
        android:textSize="18sp"
        android:lineHeight="20dp"
        android:layout_below="@+id/profile_button"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:fontFamily="@font/iner_bold"
        android:background="@drawable/my_button_background"
        android:layout_marginBottom="44dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/tree_down" />
</RelativeLayout>