<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.UserDetailsActivity">
    <ImageView
        android:id="@+id/tree_down"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/tree_down" />
    <ImageView
        android:id="@+id/tree_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/login_big" />

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="85dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:text="Tên người dùng" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/name_label"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_alignBaseline="@+id/name_label"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Giới tính"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_below="@+id/name_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/dob_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/iner_bold"
        android:text="Ngày sinh"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dob_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:textColor="@color/text_color"
        android:layout_toRightOf="@+id/dob_label"
        android:layout_alignBaseline="@+id/dob_label"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/gender_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_toRightOf="@+id/gender_label"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_alignBaseline="@+id/gender_label"
        android:layout_marginStart="8dp"/>


    <TextView
        android:id="@+id/address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/dob_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_toRightOf="@+id/address_label"
        android:layout_alignBaseline="@+id/address_label"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/phone_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số Điện thoại"
        android:textColor="@android:color/black"
        android:layout_below="@+id/address_label"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_toRightOf="@+id/phone_lable"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_alignBaseline="@+id/phone_lable"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/credit_card_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số tài khoản"
        android:textColor="@android:color/black"
        android:layout_below="@+id/phone_lable"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/credit_card_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_toRightOf="@+id/credit_card_lable"
        android:layout_alignBaseline="@+id/credit_card_lable"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/personal_number_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số CMND/CCCD"
        android:textColor="@android:color/black"
        android:layout_below="@+id/credit_card_lable"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/personal_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:fontFamily="@font/iner_bold"
        android:layout_toRightOf="@+id/personal_number_lable"
        android:layout_alignBaseline="@+id/personal_number_lable"
        android:layout_marginStart="8dp"/>

